<style>
    .recipe-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        justify-content: center; 
        margin-top: 2rem;
    }

    .recipe-card {
        background-color: #F9FBFA;
        border: 1px solid black;
        padding: 1rem;
        width: 320px;
        box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.1);
    }

    .recipe-card img {
        width: 100%;
        height: 180px;
        object-fit: cover; 
        margin-bottom: 0.5rem;
    }

    .recipe-card h5 {
        font-weight: 500;
        font-size: 1.2rem;
    }

    input.form-control,
    select.form-select {
        max-width: 500px;
        margin: auto;
        display: block;
        background-color: #F9FBFA;
        border: 1px solid black;
        padding: 0.5rem;
    }

    .errorMsg {
        color: red;
        font-weight: bold;
    }
</style>

@* 
@code {
    private string searchTerm = "";
    private string selectedCategory = "";
    private List<string> categories = new() { "Chicken", "Pork", "Beef", "Vegan", "Low Carb", "High Protein" };

    private IEnumerable<Recipe> FilteredRecipes => RecipeService.Recipes
    .Where(r =>
    (r.Title.Contains(searchTerm) || r.Ingredients.Any(i => i.Contains(searchTerm)))
    &&
    r.Category == selectedCategory
    );
} *@